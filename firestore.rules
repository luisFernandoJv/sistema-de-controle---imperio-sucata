rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regras para transações
    match /transactions/{transactionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Regras para inventário
    match /inventory/{inventoryId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Regras para relatórios diários
    match /daily_reports/{reportId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Regras para relatórios mensais
    match /monthly_reports/{reportId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Regras para relatórios anuais
    match /yearly_reports/{reportId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Regras para configurações do usuário
    match /user_settings/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
